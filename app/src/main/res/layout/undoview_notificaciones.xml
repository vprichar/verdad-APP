<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/cardElevation"
    android:background="@android:color/white">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:layout_width="@dimen/dividerHeight"
            android:layout_height="@dimen/notifListViewInvisibleHeight"
            android:visibility="invisible"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/textoUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/undoText" />

        <ImageView
            android:id="@+id/undoImage"
            android:layout_width="@dimen/editTextCodigoMarginTop"
            android:layout_height="@dimen/editTextCodigoMarginTop"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginLeft="@dimen/CallImageViewPaddingRigth"
            android:layout_marginRight="@dimen/CallImageViewPaddingRigth"
            android:padding="@dimen/seguroActualTextViewPaddingMarginTop"
            android:src="@drawable/ic_undo_black_36dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
