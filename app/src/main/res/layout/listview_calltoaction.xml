<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listViewCallToActionIcono"
        android:layout_width="@dimen/paddingBottomLogo"
        android:layout_height="@dimen/paddingBottomLogo"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/editTextCodigoPaddingLeftRight"
        android:layout_marginRight="@dimen/CallImageViewPaddingRigth" />

    <TextView
        android:id="@+id/listViewCalltoActionTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:padding="@dimen/buttonLoginPaddingRightLeft"
        android:paddingEnd="@dimen/editTextCodigoPaddingLeftRight"
        android:textColor="@color/rectanguloSplash"
        android:textSize="17sp" />

</LinearLayout>